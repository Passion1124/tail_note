/* components/navbar/index.wxss */
.navbar-occupy {

}

.navbar {
  width: 100%;
  overflow: hidden;
  position: fixed;
  top: 0;
  left: 0;
  background-color: #fff;
  z-index: 10;
}

.navbar-title {
  width: 100%;
  height: 46px;
  line-height: 46px;
  text-align: center;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 10;
  background-color: #fff;
  color: #333;
  font-size: 30rpx;
}

.navbar-action-wrap{
  position: absolute;
  left: 10px;
  bottom: 7px;
  z-index: 100;
}

.navbar-action-group {  
  display: flex;
  align-items: center;
  border:1px solid #e8e8e8;
  border-radius: 20px;
  overflow: hidden
}

.navbar-action-group view {
  width: 40px;
  height: 28rpx;
  padding: 14rpx 0;
  text-align: center;
}

.navbar-action-group view.line {
  width: 1rpx;
  background-color: #cccccc;
}

.navbar-action-group image {
  width: 28rpx;
  height: 28rpx;
  vertical-align: top;
}

.navbar-action_item{
  padding:3px 0;
  color: #333;
}

.navbar-action-group .navbar-action_item{
 border-right: 1px solid #e8e8e8;
 padding:3px 12px;
}