.container {
  padding: 0 30rpx;
}

.search_wrap {
  background-color: #fff;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: flex-end;
  margin-bottom: 56rpx;
}

.search_input {
  display: flex;
  flex-direction: row;
  flex: 1;
  /* width: 600rpx; */
  height: 60rpx;
  background-color: #f7f7f7;
  border-radius: 100rpx;
  align-items: center;
  margin-top: 14rpx;
  margin-bottom: 14rpx;
}

.search-img {
  margin-right: 12rpx;
  margin-left: 23rpx;
  width: 28rpx;
  height: 28rpx;
  margin-top: 21rpx;
  margin-bottom: 22rpx;
}

.search_input input {
  width: 485rpx;
  height: 60rpx;
  font-size: 24rpx;
  font-weight: 300;
  border: none;
  background-color: #f7f7f7;
  -webkit-appearance: none;
}

.search_input .phcolor {
  color: #b7b7b7;
}

.canclesearch {
  padding-left: 35rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 92rpx;
  font-size: 28rpx;
  font-weight: 300;
  color: #8c8c8c;
}

.history_search {
  margin-bottom: 58rpx;
}

.history_search .title {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.history_search .title .text {
  font-size: 28rpx;
  line-height: 40rpx;
  color: #8c8c8c;
}

.history_search .title .remove {
  width: 30rpx;
  height: 31rpx;
}

.history_search .title .remove image {
  width: 100%;
  height: 100%;
  vertical-align: top;
}

.history_search .list>view {
  font-size: 32rpx;
  line-height: 45rpx;
  letter-spacing: 1rpx;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #e0e0e0;
}

.hislist {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
}

.delsingimg {
  padding-top: 23rpx;
  padding-bottom: 23rpx;
  padding-left: 20rpx;
}

.delsingle {
  width: 34rpx;
  height: 34rpx;
}

.hot_recommend {
  margin-bottom: 30rpx;
}

.hot_recommend .title {
  font-size: 28rpx;
  line-height: 40rpx;
  color: #8c8c8c;
  margin-bottom: 16rpx;
}

.hot_recommend .list view {
  font-size: 32rpx;
  line-height: 45rpx;
  color: #3c3c3c;
  letter-spacing: 1rpx;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #e0e0e0;
}

.txt {
  width: 640px;
  -webkit-line-clamp: 1;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
