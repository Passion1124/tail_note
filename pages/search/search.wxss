.container {
  /* padding: 0 30rpx; */
}

.search_correlation {
  width: 100%;
  height: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.search_wrap {
  background-color: #fff;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.search_input {
  display: flex;
  flex-direction: row;
  flex: 1;
  /* width: 600rpx; */
  height: 60rpx;
  background-color: #f7f7f7;
  border-radius: 100rpx;
  align-items: center;
  margin-top: 14rpx;
  margin-bottom: 14rpx;
}

.search-img {
  margin-right: 12rpx;
  margin-left: 23rpx;
  width: 28rpx;
  height: 28rpx;
  margin-top: 21rpx;
  margin-bottom: 22rpx;
}

.search_input input {
  width: 485rpx;
  height: 60rpx;
  font-size: 24rpx;
  font-weight: 300;
  border: none;
  background-color: #f7f7f7;
  -webkit-appearance: none;
}

.search_input .phcolor {
  color: #b7b7b7;
}

.canclesearch {
  padding-left: 35rpx;
  /* height: 92rpx; */
  font-size: 28rpx;
  font-weight: 300;
  color: #8c8c8c;
}

.history_search {
  margin-bottom: 58rpx;
}

.history_search .title {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.history_search .title .text {
  font-size: 28rpx;
  line-height: 40rpx;
  color: #8c8c8c;
}

.history_search .title .remove {
  width: 30rpx;
  height: 31rpx;
}

.history_search .title .remove image {
  width: 100%;
  height: 100%;
  vertical-align: top;
}

.history_search .list>view {
  font-size: 32rpx;
  line-height: 45rpx;
  letter-spacing: 1rpx;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #e0e0e0;
}

.hislist {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
}

.delsingimg {
  padding-top: 23rpx;
  padding-bottom: 23rpx;
  padding-left: 20rpx;
}

.delsingle {
  width: 34rpx;
  height: 34rpx;
  vertical-align: top;
}

.hot_recommend {
  margin-bottom: 30rpx;
}

.hot_recommend .title {
  font-size: 28rpx;
  line-height: 40rpx;
  color: #8c8c8c;
  margin-bottom: 16rpx;
}

.hot_recommend .list view {
  font-size: 32rpx;
  line-height: 45rpx;
  color: #3c3c3c;
  letter-spacing: 1rpx;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #e0e0e0;
}

.txt {
  width: 640px;
  -webkit-line-clamp: 1;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.txt + view {
  line-height: 0;
}

scroll-view {
  background-color: #F2F2F2;
}

.search_result{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  width: 100%;
  padding: 10rpx;
  box-sizing: border-box;
  background-color: #F2F2F2;
}

.search_result .list_row {
  width: 50%;
  padding: 10rpx;
  box-sizing: border-box;
}

.search_result .list{
  width: 100%;
  background-color: #FFF;
  border-radius: 10rpx;
  overflow: hidden;
  box-sizing: border-box;
}

.search_result .list:last-of-type{
  border-bottom: 0;
}

.search_result .list .img{
  position: relative;
  width: 100%;
  height: 300rpx;
  /* width: 160rpx;
  min-width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 24rpx;
  overflow: hidden; */
}

.search_result .list .img image{
  width: 100%;
  height: 100%;
  vertical-align: top
}

.search_result .list .img view{
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 35rpx;
  font-size: 20rpx;
  line-height: 35rpx;
  color: #fff;
  text-align: center;
  background-color: rgba(0, 0, 0, .4);
}

.search_result .list .title_price{
  /* flex: 1;
  max-width: 480rpx; */
  width: 100%;
  padding: 20rpx;
  font-size: 32rpx;
  line-height: 45rpx;
  box-sizing: border-box;
}

.search_result .list .title_price .title{
  width: 100%;
  /* height: 90rpx; */
  color: #3C3C3C;
  box-sizing: border-box;
  vertical-align: top;
  letter-spacing: 1rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 16rpx;
}

.search_result .list .title_price .tags{
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  margin-bottom: 11rpx;
}

.search_result .list .title_price .tags .tag{
  font-size: 18rpx;
  line-height: 30rpx;
  padding: 5rpx 10rpx;
  color: #23C2F7;
  border: 1rpx solid #23C2F7;
  border-radius: 4px;
  margin-right: 10rpx;
  margin-bottom: 5rpx;
}

.search_result .list .title_price .tags .tag:last-of-type{
  margin-right: 0;
}

.search_result .list .title_price .price{
  width: 100%;
  color: #F97572;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.empty{
  padding-top: 80rpx;
  margin: 0 auto;
}

.empty .image_row{
  width: 614rpx;
  height: 380rpx;
  margin: 0 auto 30rpx;
}

.empty .image_row image{
  width: 100%;
  height: 100%;
  vertical-align: top;
}

.empty .text{
  font-size: 32rpx;
  line-height: 45rpx;
  color: #8C8C8C;
  letter-spacing: 3rpx;
  text-align: center;
}
