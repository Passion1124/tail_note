.container{
  padding: 0 32rpx;
}

.commodity{
  display: flex;
  width: 100%;
  height: 100%;
  padding: 40rpx 0;
  box-sizing: border-box;
  border-bottom: 1px solid #E0E0E0;
}

.commodity:last-of-type{
  border-bottom: 0;
}

.commodity .image_text{
  position: relative;
  width: 160rpx;
  height: 160rpx;
  margin-right: 24rpx;
  border-radius: 8rpx;
  text-align: center;
  background-color: palevioletred;
  overflow: hidden;
}

.commodity .image_text .img{
  width: 100%;
  height: 100%;
}

.commodity .image_text view:last-of-type{
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 35rpx;
  background-color: rgba(0, 0, 0, .4);
}

.commodity .image_text .explain{
  display: inline-block;
  width: 100%;
  height: 100%;
  line-height: 35rpx;
  font-size: 20rpx;
  vertical-align: top;
  color: #fff;
}

.commodity .introduce{
  flex: 1;
}

.commodity .introduce .name{
  margin-bottom: 24rpx;
  font-size: 32rpx;
  line-height: 45rpx;
  letter-spacing: 1rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.commodity .introduce view:last-of-type{
  display: flex;
  height: 45rpx;
  align-items: center;
}

.commodity .introduce view:last-of-type .money{
  flex: 1;
  font-size: 32rpx;
  line-height: 33rpx;
  font-weight: 500;
  color: #F97572;
}

.commodity .introduce view:last-of-type .collect image{
  width: 32rpx;
  height: 32rpx;
}