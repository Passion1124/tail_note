.container{
  /* padding: 0 32rpx; */
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  width: 100%;
  height: auto;
  min-height: 100%;
  padding: 10rpx;
  box-sizing: border-box;
  background-color: #F2F2F2;
}

.commodity_row {
  width: 50%;
  padding: 10rpx;
  box-sizing: border-box;
}

.commodity{
  width: 100%;
  background-color: #FFF;
  border-radius: 10rpx;
  overflow: hidden;
  box-sizing: border-box;
}

.commodity .img{
  position: relative;
  width: 100%;
  height: 300rpx;
  /* width: 160rpx;
  min-width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 24rpx;
  overflow: hidden; */
}

.commodity .img image{
  width: 100%;
  height: 100%;
  vertical-align: top
}

.commodity .img view{
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 35rpx;
  font-size: 20rpx;
  line-height: 35rpx;
  color: #fff;
  text-align: center;
  background-color: rgba(0, 0, 0, .4);
}

.commodity .title_price{
  /* flex: 1;
  max-width: 480rpx; */
  width: 100%;
  padding: 20rpx;
  font-size: 32rpx;
  line-height: 45rpx;
  box-sizing: border-box;
}

.commodity .title_price .title{
  width: 100%;
  /* height: 90rpx; */
  color: #3C3C3C;
  box-sizing: border-box;
  vertical-align: top;
  letter-spacing: 1rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 16rpx;
}

.commodity .title_price .tags{
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  margin-bottom: 11rpx;
}

.commodity .title_price .tags .tag{
  font-size: 18rpx;
  line-height: 30rpx;
  padding: 5rpx 10rpx;
  color: #23C2F7;
  border: 1rpx solid #23C2F7;
  border-radius: 4px;
  margin-right: 10rpx;
  margin-bottom: 5rpx;
}

.commodity .title_price .tags .tag:last-of-type{
  margin-right: 0;
}

.commodity .title_price .price{
  width: 100%;
  color: #F97572;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

