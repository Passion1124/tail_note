.tips{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 105rpx;
  background-color: #fff;
}

.tips .img_row{
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
  animation: keep_spinning 1.2s ease-in infinite;
}

.tips .img_row image{
  width: 100%;
  height: 100%;
  vertical-align: top;
}

.tips .text{
  font-size: 28rpx;
  line-height: 40rpx;
  color: #484848;
}

@-webkit-keyframes keep_spinning{
  from {
    transform: rotate(0)
  }
  to {
    transform: rotate(360deg)
  }
}