.container{
  padding: 0 12px;
}

.list{
  display: flex;
  width: 100%;
  padding: 12px 0;
  font-size: 13px;
  color: gray;
  border-bottom: 1px solid #ccc;
}

.list>view:last-of-type{
  flex: 1;
  text-align: right;
}

.list>view:last-of-type.commodity_right{
  flex: none;
}

.commodity .img_row{
  width: 60px;
  height: 60px;
  background-color: #ccc;
  margin-right: 10px;
  overflow: hidden;
}

.commodity .commodity_center{
  flex: 1;
  margin-right: 10px;
}

.commodity .commodity_right{
  text-align: right;
}

.commodity .commodity_center view:first-of-type, .commodity .commodity_right view:first-of-type{
  height: 34px;
  margin-bottom: 5px;
  overflow: hidden;
}

.commodity .commodity_center view:last-of-type, .commodity .commodity_right view:last-of-type{
  color: #000;
}

.btn_group{
  display: flex;
  margin: 15px 0;
  /* text-align: right; */
  justify-content: space-between;
  align-content: right;
}

.btn_group button{
  width: 45%;
  margin: 0;
}

.btn_group button:last-of-type{
  margin-left: auto;
}