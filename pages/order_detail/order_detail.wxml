<!-- order_detail.wxml -->
<view class='container'>
  <view class='list commodity'>
    <view class='img_row'>
      <image src='{{detail.poster}}'></image>
    </view>
    <view class='commodity_content'>
      <view class='commodity_name'>
        <text>{{detail.desc}}</text>
      </view>
      <view class='date_num'>
        <view class='date'>
          <text>{{detail.itemName}}</text>
        </view>
        <view class='num'>
          <text>x{{detail.num}}</text>
        </view>
      </view>
    </view>
  </view>
  <view class='list total'>
    <view>
      <text>合计：</text>
    </view>
    <view>
      <text>￥{{detail.totalAmount / 100}}</text>
    </view>
  </view>
  <view class='list single refund' wx:if="{{detail.statusAt === 2 || detail.statusAt === 3}}">
    <view>
      <text>退款金额：￥{{detail.totalAmount / 100}}</text>    
    </view>
    <view>
      <text class='{{detail.statusAt === 2 ? "pending" : ""}}'>{{ detail.statusAt === 2 ? '退款中' : '已退款'}}</text>
    </view>
  </view>
  <view class='list order_info'>
    <view>
      <view>
        <text>手机号：</text>
      </view>
      <view>
        <text>{{detail.phone}}</text>
      </view>
    </view>
    <view>
      <view>
        <text>订单号：</text>
      </view>
      <view>
        <text>{{detail.orderNo}}</text>
      </view>
    </view>
    <view>
      <view>
        <text>下单时间：</text>
      </view>
      <view>
        <text>{{orderTime}}</text>
      </view>
    </view>
  </view>
  <view class='list order_info'>
    <view>
      <view>
        <text>付款方式：</text>
      </view>
      <view>
        <text>微信</text>
      </view>
    </view>
    <view>
      <view>
        <text>付款时间：</text>
      </view>
      <view>
        <text>{{payTime}}</text>
      </view>
    </view>
  </view>
  <view class='list single' bindtap='goToTheInvoice' wx:if="{{detail.statusAt === 5 && orderInvoice && orderInvoice.invoiceStatus === 0}}">
    <view>
      <text>发票：</text><text>未开票</text>
    </view>
    <view>
      <image src='../../img/more.png'></image>
    </view>
  </view>
  <view class='list single' data-title='{{company_name}}' data-taxNumber='{{taxNumber}}' bindtap='goToTheInvoice' wx:if="{{detail.statusAt === 5 && orderInvoice && orderInvoice.invoiceStatus === 1}}">
    <view>
      <text>发票：</text><text>{{company_name}}</text>
    </view>
    <view>
      <image src='../../img/more.png'></image>
    </view>
  </view>
  <view class='btn_group' wx:if="{{detail.statusAt === 0}}">
    <button>取消订单</button>
    <button>去付款</button>
  </view>
  <view class='btn_group apply' wx:if="{{detail.statusAt === 1}}">
    <button>申请退款</button>
  </view>
</view>