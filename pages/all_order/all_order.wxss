.tab-h {
  position: fixed;
  top: 0;
  left: 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 100%;
  height: 80rpx;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  background: #f7f7f7;
  font-size: 12px;
  /* white-space: nowrap; */
  z-index: 99;
}

.tab-item {
  display: inline-block;
  width: 16.66%;
  text-align: center;
  /* margin: 0 36rpx; */
  /* display: inline-block; */
}

.tab-item.active {
  color: #4675f9;
  position: relative;
}

.tab-item.active:after {
  content: "";
  display: block;
  height: 8rpx;
  width: 100%;
  background: #4675f9;
  position: absolute;
  bottom: 0;
  left: 5rpx;
  border-radius: 16rpx;
}

.item-ans {
  width: 100%;
  /* display: flex; */
  /* flex-grow: row no-wrap; */
  /* justify-content: space-between; */
  padding: 30rpx 0;
  box-sizing: border-box;
  /* height: 180rpx; */
  align-items: center;
  border-bottom: 1px solid #f2f2f2;
}

.item-ans .item_info{
  display: flex;
  font-size: 13px;
  color: gray;
  margin-bottom: 10px;
}

.item-ans .item_info .info_name{
  flex: 1;
}

.item-ans .item_info .info_status{
  padding-left: 30rpx;
}

.item-ans .item_main{
  display: flex;
}

.item-ans .item_main .main_img{
  width: 60px;
  height: 60px;
  margin-right: 10px;
}

.item-ans .item_main .main_img image{
  width: 100%;
  height: 100%;
  background-color: gray;
}

.item-ans .item_main .main_text{
  flex: 1;
  font-size: 13px;
}

.item-ans .item_main .main_text view:first-of-type{
  margin: 10px 0;
}

.item-ans .item_main .main_text view:last-of-type{
  font-size: 15px;
}

.item-ans .item_main .main_num{
  font-size: 13px;
  padding-top: 10px;
}

.tab-content {
  margin-top: 80rpx;
}

.scoll-h {
  height: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
}
