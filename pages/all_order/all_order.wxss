.tab-h {
  position: fixed;
  /* top: 0; */
  left: 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 100%;
  height: 84rpx;
  box-sizing: border-box;
  line-height: 84rpx;
  background: #fff;
  font-size: 28rpx;
  padding: 0 40rpx;
  border-bottom: 1rpx solid #E0E0E0;
  white-space: nowrap;
  z-index: 99;
}

/*隐藏滚动条*/
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.tab-item {
  position: relative;
  display: inline-block;
  text-align: center;
  margin-right: 48rpx;
  color: #8C8C8C;
}

.tab-item:last-of-type{
  margin-right: 0;
}

.tab-item.active {
  color: #3C3C3C;
}

.tab-item.active:after {
  position: absolute;
  bottom: 0;
  left: 0;
  content: "";
  display: block;
  height: 2px;
  width: 40rpx;
  background: #23C2F7;
  z-index: 99;
}

.scoll-h {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.list_row{
  width: 100%;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.item-ans {
  width: 100%;
  padding: 40rpx 0;
  box-sizing: border-box;
  align-items: center;
  border-bottom: 1rpx solid #E0E0E0;
}

/* .item-ans:last-of-type{
  border-bottom: 0;
} */

.item-ans .item_info{
  display: flex;
  font-size: 32rpx;
  color: #3C3C3C;
  margin-bottom: 32rpx;
  letter-spacing: 1px;
}

.item-ans .item_info .info_name{
  flex: 1;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}

.item-ans .item_info .info_status{
  padding-left: 44rpx;
}

.item-ans .item_info .info_status.pengding{
  color: #F97572;
}

.item-ans .item_main{
  display: flex;
  height: 140rpx;
  background-color: #F5F5F5;
  padding: 24rpx;
  box-sizing: border-box;
  border-radius: 8rpx;
}

.item-ans .item_main .main_img{
  margin-right: 24rpx;
}

.item-ans .item_main .main_img image{
  width: 92rpx;
  height: 92rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.item-ans .item_main .main_text{
  flex: 1;
  font-size: 24rpx;
  line-height: 33rpx;
  letter-spacing: 1px;
  color: #8C8C8C;
  box-sizing: border-box;
  overflow: hidden;
}

.item-ans .item_main .main_text view:first-of-type{
  padding-right: 45rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  margin-bottom: 16rpx;
  box-sizing: border-box;
}

.item-ans .item_main .main_text view:last-of-type{
  font-size: 32rpx;
  line-height: 45rpx;
  color: #F97572;
}

.item-ans .item_main .main_num{
  font-size: 24rpx;
  line-height: 33rpx;
  letter-spacing: 1px;
  color: #8C8C8C;
  text-align: right;
}

.item-ans .item_main .main_num view:first-of-type{
  margin-bottom: 16rpx;
}

.item-ans .item_main .main_num view:last-of-type{
  font-size: 28rpx;
  line-height: 45rpx;
  color: #000;
}

.item-ans .item_main .main_num view:last-of-type.pengding{
  color: #F97572;
}

.tab-content {
  margin-top: 84rpx;
}

.tip{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 105rpx;
  background-color: #fff;
}

.tip .img_row{
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
  animation: keep_spinning 1.2s ease-in infinite;
}

.tip .img_row image{
  width: 100%;
  height: 100%;
  vertical-align: top;
}

.tip .text{
  font-size: 28rpx;
  line-height: 40rpx;
  color: #484848;
}

.empty{
  margin: 0 auto;
  padding-top: 80rpx;
}

.empty .image_row{
  width: 614rpx;
  height: 380rpx;
  margin: 0 auto 30rpx;
}

.empty .image_row image{
  width: 100%;
  height: 100%;
  vertical-align: top;
}

.empty .text{
  font-size: 32rpx;
  line-height: 45rpx;
  color: #8C8C8C;
  letter-spacing: 3rpx;
  text-align: center;
}

@-webkit-keyframes keep_spinning{
  from {
    transform: rotate(0)
  }
  to {
    transform: rotate(360deg)
  }
}