<!-- order.wxml -->

<view class='container'>
  <view class='user_info' bindtap='goToTheUserInfo'>
    <view class='avatar'>
      <image src='../../img/avatar.png'></image>
    </view>
    <view class='name'>
      <text>妖小花</text>
    </view>
    <view class='telephone'>
      <text>13881937828</text>
    </view>
  </view>
  <view class='classify'>
    <view class='all_order' bindtap='goToTheAllOrder'>
      <view class='icons'>
        <image src='../../img/all_order.png'></image>
      </view>
      <view class='text'>
        <text>全部订单</text>
      </view>
    </view>
    <view class='pending' bindtap='goToTheAllOrder'>
      <view class='icons'>
        <image src='../../img/pending.png'></image>
      </view>
      <view class='text'>
        <text>待付款</text>
      </view>
    </view>
    <view class='use' bindtap='goToTheAllOrder'>
      <view class='icons'>
        <image src='../../img/use.png'></image>
      </view>
      <view class='text'>
        <text>待使用</text>
      </view>
    </view>
  </view>
  <view class='list' bindtap='goToTheAllOrder'>
    <view>
      <text>全部订单</text>
    </view>
    <view>
      <image src='../../img/more.png'></image>
    </view>
  </view>
  <view class='list' bindtap='goToTheCollect'>
    <view>
      <text>我的收藏</text>
    </view>
    <view>
      <image src='../../img/more.png'></image>
    </view>
  </view>
</view>