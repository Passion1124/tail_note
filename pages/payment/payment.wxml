<!-- payment.wxml -->
<view class='container'>
  <navbar page-name='付款'></navbar>
  <view class='commodity_info'>
    <view class='info'>
      <view class='img_row'>
        <image mode='aspectFill' src='{{detail.poster}}'></image>
      </view>
      <view class='info_text'>
        <view class='name'>
          <text>{{detail.desc}}</text>
        </view>
        <view class='date_num'>
          <view class='date'>
            <text>{{detail.itemName}}</text>
          </view>
          <view class='num'>
            <text>x{{detail.num}}</text>
          </view>
        </view>
      </view>
    </view>
    <view class='single'>
      <view>
        <text>合计</text>
      </view>
      <view>
        <text>￥{{detail.totalAmount / 100}}</text>
      </view>
    </view>
    <view class='list order_info'>
      <view>
        <view>
          <text>手机号：</text>
        </view>
        <view>
          <text>{{detail.phone}}</text>
        </view>
      </view>
      <view>
        <view>
          <text>收货地址：</text>
        </view>
        <view>
          <text>{{detail.address}}</text>
        </view>
      </view>
      <view>
        <view>
          <text>订单号：</text>
        </view>
        <view>
          <text>{{detail.orderNo}}</text>
        </view>
      </view>
      <view>
        <view>
          <text>下单时间：</text>
        </view>
        <view>
          <text>{{orderTime}}</text>
        </view>
      </view>
    </view>
  </view>
  <view class='price_pay'>
    <view class='price'>
      <text>合计</text>
      <text>￥{{detail.totalAmount / 100}}</text>
    </view>
    <view class='pay'>
      <button bindtap='handlePrePay'>去付款</button>
    </view>
  </view>
</view>