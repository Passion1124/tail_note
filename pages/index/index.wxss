/**index.wxss**/
.banner{
  width: 100%;
  height: 280rpx;
  padding: 0 36rpx;
  box-sizing: border-box;
}

.banner swiper{
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  overflow: hidden;
}

.banner .swiper_img{
  width: 100%;
  height: 100%;
}

.classify{
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  width: 100%;
  padding: 0 40rpx;
  margin: 72rpx 0;
  box-sizing: border-box;
}

.classify view{
  /* flex: 1; */
  width: 167.5rpx;
  text-align: center;
}

.classify view .icons{
  line-height: 0;
}

.classify view image{
  width: 54rpx;
  height: 54rpx;
  vertical-align: top;
}

.classify view .classify_text{
  font-size: 24rpx;
  line-height: 33rpx;
  color: #8C8C8C;
  margin-top: 24rpx;
}

.tips{
  font-size: 28rpx;
  line-height: 40rpx;
  color: #3C3C3C;
  text-align: center;
  margin-bottom: 8rpx;
}

.tips text{
  position: relative;
}

.tips text::before, .tips text::after{
  position: absolute;
  top: 50%;
  content: "";
  width: 80rpx;
  height: 2rpx;
  border-radius: 1rpx;
  transform: translateY(-50%);
}

.tips text::before{
  left: 120%;
  background:linear-gradient(90deg,rgba(249,117,114,1) 0%,rgba(249,117,114,0) 100%);
}

.tips text::after{
  right: 120%;
  background:linear-gradient(90deg,rgba(249,117,114,0) 0%,rgba(249,117,114,1) 100%);
}

.recommend{
  width: 100%;
  padding: 0 40rpx;
  box-sizing: border-box
}

.recommend .list{
  display: flex;
  width: 100%;
  padding: 40rpx 0;
  border-bottom: 1px solid #E0E0E0;
}

.recommend .list:last-of-type{
  border-bottom: 0;
}

.recommend .list .img{
  position: relative;
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 24rpx;
  overflow: hidden; 
}

.recommend .list .img image{
  width: 100%;
  height: 100%;
}

.recommend .list .img view{
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 35rpx;
  font-size: 20rpx;
  line-height: 35rpx;
  color: #fff;
  text-align: center;
  background-color: rgba(0, 0, 0, .4);
}

.recommend .list .title_price{
  flex: 1;
  font-size: 32rpx;
  line-height: 45rpx;
}

.recommend .list .title_price .title{
  height: 90rpx;
  color: #3C3C3C;
  box-sizing: border-box;
  vertical-align: top;
  letter-spacing: 1rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 24rpx;
}

.recommend .list .title_price .price{
  color: #F97572;
}

.custom{
  position: fixed;
  right: 24rpx;
  bottom: 70rpx;
  width: 88rpx;
  height: 88rpx;
  text-align: center;
  border-radius: 50%;
  box-shadow:0 0 10rpx 0 rgba(0,0,1,0.19);
  background-color: #fff;
}

.custom image{
  width: 44rpx;
  height: 44rpx;
  margin-top: 22rpx;
}