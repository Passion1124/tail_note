@import "../../wxParse/wxParse.wxss";

.container{
  padding-bottom: 100rpx;
}

/*隐藏滚动条*/
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.banner{
  width: 100%;
  height: 750rpx;
}

.banner swiper{
  width: 100%;
  height: 100%;
}

.banner .swiper_img{
  width: 100%;
  height: 100%;
}

.info{
  width: 100%;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.info .info_title{
  width: 100%;
  font-size: 44rpx;
  line-height: 62rpx;
  color: #484848;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-top: 48rpx;
}

.info .info_tags{
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  margin-top: 24rpx;
}

.info .info_tags .tag{
  font-size: 22rpx;
  line-height: 30rpx;
  padding: 5rpx 12rpx;
  color: #23C2F7;
  border: 1rpx solid #23C2F7;
  border-radius: 4px;
  margin-right: 16rpx;
}

.info .info_tags .tag:last-of-type{
  margin-right: 0;
}

.info .price_collect{
  display: flex;
  justify-content: space-between;
  height: 50rpx;
  margin-top: 48rpx;
  padding-bottom: 32rpx;
  border-bottom: 1rpx solid #E0E0E0;
  align-items: center;
  overflow: hidden;
}

.info .price_collect .price{
  max-width: 480rpx;
  flex: 1;
  font-size: 36rpx;
  line-height: 50rpx;
  color: #F97572;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.info .price_collect .collect{
  line-height: 0;
  overflow: hidden;
}

.info .price_collect .collect image{
  width: 40rpx;
  height: 40rpx;
}

.detail{
  width: 100%;
  padding: 0 40rpx;
  margin-top: 64rpx;
  margin-bottom: 40rpx;
  box-sizing: border-box;
}

.detail .detail_title{
  display: none;
  font-size: 36rpx;
  line-height: 50rpx;
  color: #3C3C3C;
  margin-bottom: 40rpx;
}

.detail .wx_parse image{
  max-width: 100%;
  margin: 0 auto;
}

.detail .detail_interduce{
  font-size: 28rpx;
  line-height: 40rpx;
  margin-bottom: 40rpx;
  color: #3C3C3C;
}

.detail .detail_img{
  line-height: 0;
  margin-bottom: 40rpx;
}

.detail .detail_img image{
  width: 100%;
  height: 476rpx;
}

.bottom_btn_group{
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  align-items: center;
  width: 100%;
  height: 112rpx;
  padding: 0 40rpx;
  background-color: #fff;
  box-shadow:0 -5rpx 10rpx 0 rgba(0,0,1,0.06);
  box-sizing: border-box;
}

.bottom_btn_group .custom{
  /* display: none; */
  flex: 1;
  text-align: center;
}

.bottom_btn_group .custom button{
  background-color: #fff;
}

.bottom_btn_group .custom view{
  font-size: 0;
  line-height: 0;
}

.bottom_btn_group .custom view:last-of-type{
  margin-top: 5rpx;
}

.bottom_btn_group .custom image{
  width: 44rpx;
  height: 44rpx;
}

.bottom_btn_group .custom text{
  font-size: 24rpx;
  line-height: 33rpx;
  color: #8C8C8C;
}

.bottom_btn_group .shoping{
  margin: 0 auto;
}

.bottom_btn_group .shoping button{
  width: 540rpx;
  height: 72rpx;
  border-radius: 40rpx;
  background-color: #F97572;
  font-size: 28rpx;
  color: #fff;
  letter-spacing: 2rpx;
}

.mask{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, .6);
  transition: all .3s linear;
  z-index: 99;
}

.open_mask{
  display: block;
}

.close_mask{
  display: none;
}

.order_info{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  padding: 105rpx 40rpx 0;
  border-radius:16rpx 16rpx 0px 0px;
  background-color: #fff;
  box-sizing: border-box;
  transition: all .3s linear;
  z-index: 100;
}

.open_popup{
  transform: translateY(0);
}

.close_popup{
  transform: translateY(100%);
}

.order_info .commodity_info{
  display: flex;
  width: 100%;
  margin-bottom: 40rpx;
}

.order_info .commodity_info .img_row{
  width: 164rpx;
  height: 164rpx;
  margin-right: 24rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.order_info .commodity_info .img_row image{
  width: 100%;
  height: 100%;
}

.order_info .commodity_info .text_info{
  max-width: 476rpx;
  flex: 1;
  box-sizing: border-box;
}

.order_info .commodity_info .text_info .title{
  height: 90rpx;
  font-size: 32rpx;
  line-height: 45rpx;
  color: #484848;
  margin-bottom: 24rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.order_info .commodity_info .text_info .price{
  font-size: 36rpx;
  line-height: 50rpx;
  color: #ACACAC;
  font-weight: bold;
}

.order_info .commodity_info .text_info .price>view{
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.order_info .commodity_info .text_info .price>view:last-of-type{
  color: #F97572;
  /* margin-left: 10px; */
}

.order_info .trip{
  width: 100%;
}

.order_info .trip view:first-of-type{
  margin-bottom: 24rpx;
  font-size: 32rpx;
  line-height: 45rpx;
  color: #3C3C3C;
}

.order_info .trip view radio-group{
  display: flex;
  flex-wrap: wrap;
}

.order_info .trip view radio-group label{
  padding: 14rpx 48rpx;
  border: 1rpx solid #D3D3D3;
  font-size: 24rpx;
  line-height: 33rpx;
  margin-bottom: 32rpx;
  margin-right: 10rpx;
  border-radius: 32rpx;
  color: #666666;
}


.order_info .trip view radio-group label:last-of-type{
  /* margin-bottom: 40rpx; */
}

.order_info .trip view radio-group label.checked{
  border-color: #23C2F7;
  background-color: #23C2F7;
  color: #fff;
}

.order_info .trip view radio-group radio{
  display: none;
}

.order_info .number, .order_info .telephone, .order_info .wechat{
  display: flex;
  width: 100%;
  padding: 24rpx 0;
  font-size: 32rpx;
  line-height: 45rpx;
  color: #3C3C3C;
  align-items: center;
  box-sizing: border-box;
  border-bottom: 1rpx solid #E0E0E0;
}

.order_info .number{
  padding-top: 0;
}

.order_info .number>view:last-of-type, .order_info .telephone>view:last-of-type, .order_info .wechat>view:last-of-type{
  flex: 1;
  /* font-size: 0; */
  text-align: right;
}

.order_info .number .stepper{
  display: inline-block;
    width: 262rpx;  
    height: 60rpx;  
    /*给主容器设一个边框*/  
    border: 1rpx solid #23C2F7;  
    border-radius: 35rpx;  
    text-align: center;
}

.order_info .number .stepper text{
    width: 72rpx;  
    line-height: 60rpx;  
    font-size: 42rpx;
    text-align: center;  
    float: left;  
}

/*数值*/  
.order_info .number .stepper input{  
    width: 114rpx;  
    height: 60rpx;  
    float: left;  
    margin: 0 auto;  
    text-align: center;  
    font-size: 36rpx;  
    /*给中间的input设置左右边框即可*/  
    color: #23C2F7;
    border-left: 1rpx solid #23C2F7;  
    border-right: 1rpx solid #23C2F7;  
} 

/*普通样式*/  
.order_info .number .stepper .normal{  
    color: #23C2F7;
}  
  
/*禁用样式*/  
.order_info .number .stepper .disabled{  
    color: #ccc;  
}

.order_info .next{
  width: 560rpx;
  height: 80rpx;
  margin: 87rpx auto 64rpx;
}

.order_info .next button{
  width: 100%;
  height: 100%;
  font-size: 32rpx;
  color: #fff;
  border-radius: 40rpx;
  background-color: #F97572;
}

.order_info .next button.disabled{
  background-color: #E0E0E0;
}

.order_info .close{
  position: absolute;
  top: 24rpx;
  right: 34rpx;
}

.order_info .close image{
  width: 44rpx;
  height: 44rpx;
}